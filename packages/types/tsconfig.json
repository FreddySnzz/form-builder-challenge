{
  "extends": "@repo/ts-config/base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@repo/types/*": ["./src/*"],
      "@packages/*": ["./packages/*"]
    },
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": ["./**/*.ts", "./**/*.d.ts", "src/**/*"],
  "exclude": ["node_modules", "dist"]
}